
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Point;

import javax.swing.JComponent;
/**
 * Class to draw the components.
 */
public class gameComponent extends JComponent {
	private Hero hero;
	private Monster monster;
	private GameMap gameMap;
	private Bomb bomb;
	private boolean isBomb;

	public gameComponent() {
		this.hero = new Hero(this);
		this.monster=new Monster(this);
		this.gameMap = new GameMap();
		this.bomb = new Bomb(this.hero.getPosition());
		this.isBomb = false;
	}

	public GameMap getMap() {
		return this.gameMap;
	}

	@Override
	protected void paintComponent(Graphics g) {
		Graphics2D g2 = (Graphics2D) g;
		this.hero.draw(g2);
		this.monster.draw(g2);
		this.gameMap.draw(g2);
		if (isBomb) {
			this.bomb.draw(g2);
		}
	}

	public void addCharacter(Hero heroCharacter,Monster monsterCharacter) {
		this.hero = heroCharacter;
		this.monster = monsterCharacter;
		this.repaint();
	}

	public void addBomb(Bomb bomb) {
		this.bomb = bomb;
		isBomb = true;
		this.repaint();
	}

	public void mapPlus() {
		int mapNum = this.gameMap.getMapNum();
		if (mapNum < 6) {
			mapNum++;
			this.gameMap = new GameMap(mapNum);
		}
		this.hero.setPosition(new Point(0, 0));
		this.isBomb = false;
	}

	public void mapMinus() {
		int mapNum = this.gameMap.getMapNum();
		if (mapNum > 1) {
			mapNum--;
			this.gameMap = new GameMap(mapNum);
		}
		this.hero.setPosition(new Point(0, 0));
		this.isBomb = false;
	}
}
