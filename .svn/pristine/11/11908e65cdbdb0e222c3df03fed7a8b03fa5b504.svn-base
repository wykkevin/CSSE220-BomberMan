	public void ExplodeHeroTest(){
		Hero HeroForTest = new Hero(component);
		HeroForTest.setPosition(new Point(50,50));
		Bomb bomb1 = new Bomb(map, hero, monsterList, bombList, this.component, this.component.getRange());
		this.bombList.add(bomb1);
		bomb1.setPosition(new Point(100,100));
		Bomb bomb2 = new Bomb(map, hero, monsterList, bombList, this.component, this.component.getRange());
		this.bombList.add(bomb2);
		bomb2.setPosition(new Point(650,1));
//		Monster monsterForTest = new Monster(component,hero);
		
		bomb1.explode();
		assertEquals(new Point(50,50),HeroForTest.getPosition());
	}
	
	
	

}
